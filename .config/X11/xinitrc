# doas killall compton mpd polybar connman-vpnd picom
# pulseaudio --start &
# [ -f ~/.config/X11/Xresources ] && xrdb ~/.config/X11/Xresources &

# # Lunch Dbus
# if [ -d /etc/X11/xinit/xinitrc.d ] ; then
#  for f in /etc/X11/xinit/xinitrc.d/?*.sh ; do
#   [ -x "$f" ] && . "$f"
