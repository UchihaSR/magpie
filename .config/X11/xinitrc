# doas killall compton mpd polybar connman-vpnd picom
# pulseaudio --start &
# [ -f ~/.config/X11/Xresources ] && xrdb ~/.config/X11/Xresources &

# # Lunch Dbus
# if [ -d /etc/X11/xinit/xinitrc.d ] ; then
#  for f in /etc/X11/xinit/xinitrc.d/?*.sh ; do
#   [ -x "$f" ] && . "$f"
#  done
#  unset f
# fi

# Launches Transmission Daemon
# transmission-daemon &
# Launch Personal Scripts
setdisplay --dpi &
toggle --wall-reel &
bolt --generate &
# uniblocks --server &
watchmen &
launch --tmux &
# Launch Compositor
$COMPOSITOR -cCfF &
# Set Locker
{
    xset s "$INACTIVITY"
    xss-lock --ignore-sleep -n screensaver -- ''
    # xss-lock --ignore-sleep screensaver
} &
# sh -c "xset s $INACTIVITY; xss-lock --ignore-sleep screensaver" &
# Speed key reapeat of pressing
xset r rate 200 30 &
# Launch notification server
dunst &
# Bind Multi-purpose keys
# xmodmap "$LAYOUT_EN" &
# xcape -e "Super_L=Escape" &
# xcape -e "Mode_switch=Tab" &
{
    xmodmap "$LAYOUT_EN"
    xcape -e "Super_L=Escape;Mode_switch=Tab"
} &
# sh -c 'xmodmap $LAYOUT_EN; xcape -e "Super_L=Escape;Mode_switch=Tab"' &
# sh -c "xmodmap $LAYOUT_EN; xcape -e \"Super_L=Escape;Mode_switch=Tab\"" &
# Bind key commands
sxhkd &
# Bind gesture commands
gebaard -b &
# Remove the ugly X cursor
xsetroot -cursor_name left_ptr &
# Hide cursor when idle
unclutter &
# Launch bar
{
    sleep 1
    $STATUSBAR
} &
# Launch Window Manager
exec "$WM"
