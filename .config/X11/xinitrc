# Launches Transmission Daemon
# transmission-daemon &
# Launch Personal Scripts
setdisplay --dpi &
toggle --wall-reel &
bolt --generate &
uniblocks --server &
watchmen &
mirror --mail &
# Launch Compositor
sh -c "sleep 1 && $COMPOSITOR -cCfF" &
# Set Locker
sh -c "xset s $INACTIVITY; xss-lock --ignore-sleep screensaver" &
# Speed key reapeat of pressing
xset r rate 200 30 &
# Launch notification server
dunst &
# Bind Multi-purpose keys
xmodmap "$LAYOUT_EN" &
xcape -e -t 100 "Super_L=Escape" &
# xcape -e "Control_L=Tab" &
# sh -c "xmodmap $LAYOUT_EN; xcape -e \"Super_L=Escape;Mode_switch=Tab\"" &
# Bind key commands
sxhkd &
# Bind gesture commands
gebaard -b &
# Remove X cursor
xsetroot -cursor_name left_ptr &
# Hide cursor when idle
unclutter &
# Launch bar
sh -c "sleep 1 && $STATUSBAR" &
# Launch Window Manager
exec "$WM"
