# Launches Transmission Daemon
# transmission-daemon &
# Launch Compositor
sh -c "sleep 1 && $COMPOSITOR" &
# Launch Uniblock server
ub-server &
# Monitor preferred directories
watchmen --dots --mails &
# Set DPI (dpi.lv)
set-dpi &
# Generate search list
bolt --generate &
# Set Locker
sh -c "xset s $INACTIVITY; xss-lock --ignore-sleep screensaver" &
# Set Wallpaper
set-bg -s &
# Speed key reapeat of pressing
xset r rate 200 30 &
# Launche notification server
dunst &
# Bind Multi-purpose keys
sh -c "xmodmap $LAYOUT_EN; xcape -e \"Super_L=Escape;Mode_switch=Tab\"" &
# Bind key commands
sxhkd &
# Bind gesture commands
gebaard -b &
# Remove X cursor
xsetroot -cursor_name left_ptr &
# Hide cursor while idle
unclutter &
# Launche bar
# sh -c "sleep 1 && $STATUS_BAR" &
$STATUSBAR &
# Luanche Window Manager
exec "$WM"
