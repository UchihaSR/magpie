# Launches Transmission Daemon
# transmission-daemon &
#---------------------------------------
# Launch Personal Scripts
#---------------------------------------
# firefox &
setdisplay --dpi &
toggle --wall-reel &
bolt --generate &
# watchmen &
launch -t -T &
# Launch Compositor
$COMPOSITOR &
# Set Locker
{
   xset s "$INACTIVITY"
   xss-lock -n screensaver -- ''
} &
# Speed key press reapeat rate
xset r rate 200 30 &
# Launch notification server
dunst &
# Bind Multi-purpose keys
{
   xmodmap "$LAYOUT_EN"
   xcape -e "Super_L=Escape;Mode_switch=Tab"
} &
# Bind key commands
# sxhkd &
# Bind gesture commands
gebaard -b &
# Remove the ugly X cursor
xsetroot -cursor_name left_ptr &
# Hide cursor when idle
unclutter &
# Launch bar
$STATUSBAR &
# Launch Window Manager
exec $WM
