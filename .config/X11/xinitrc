# Monitors shortcut paths
# watch-list &
# Launches Transmission Daemon
# transmission-daemon &
# Launches Compositor
sh -c "sleep 1 && $COMPOSITOR" & 
# Launches Uniblock server
ub-server &
# Monitors mail directory
watch-mails &
# Monitors dotfiles
watch-dots &
# Sets DPI (dpi.lv)
set-dpi &
# Generates search list
generate-list &
# Sets Locker
sh -c "xset s $INACTIVITY && xss-lock --ignore-sleep screensaver" &
# Set Wallpaper
set-bg -s &
# Speeds key reapeat of pressing
xset r rate 200 30 & 
# Launch notification server
dunst &
# Binds Multi-purpose keys
sh -c "xmodmap $LAYOUT_EN && xcape -e \"Super_L=Escape;Mode_switch=Tab\"" & 
# Binds key commands
sxhkd &                     
# Binds gesture commands
gebaard -b &                     
# Removes X cursor
xsetroot -cursor_name left_ptr & 
# Hides cursor while idle
unclutter &                      
# Launch bar
# sh -c "sleep 1 && $STATUS_BAR" & 
$STATUS_BAR & 
# Luanch Window Manager
exec "$WM"

