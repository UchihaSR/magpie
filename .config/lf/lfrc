# lf configurations

# &  shell-async     shell command running asynchronously
# $  shell           shell command
# %  shell-pipe      shell command running with the ui
# !  shell-wait      shell command waiting for key press

set hidden
set color256
# set drawbox
set icons
set period 1

set previewer preview

# Two columns.
# set ratios 1:2

# ---------------------[ Commands ]-----------------------------

cmd trash %mv $fx ~/.local/share/Trash

cmd open $launch "$f"

cmd makeScript %{{
   printf "What shall be we call her? : "
      read -r name
      printf "#!/usr/bin/env sh\n\n" > "$name"
      chmod +x "$name"
}}

cmd moveto ${{
   set -f
      clear; echo "Move to where?"
      dest="$(cut -d'	' -f2- /home/salman/.config/directories | fzf)" &&
      eval mv -iv $fx $dest &&
      notify-send "ðŸšš File(s) moved." "File(s) moved to $dest."
}}

cmd copyto ${{
   set -f
      clear; echo "Copy to where?"
      dest="$(cut -d'	' -f2- /home/salman/.config/directories | fzf)" &&
      eval cp -ivr $fx $dest &&
      notify-send "ðŸ“‹ File(s) copied." "File(s) copies to $dest."
}}

cmd mkDir %{{
   printf "Directory Name: "
      read ans
      mkdir $ans
}}

cmd chmod %{{
   printf "Mode Bits: "
      read ans
      for f in "$fx"; do doas chmod $ans $f; done
}}

cmd chown ${{
   for f in "$fx"; do doas -- chown -R $USER:wheel $f; done
}}

cmd open-in-pane ${{
    tmux split-window -h -c "#{pane_current_path}" \; \
        swap-pane -d -t :.1 \; \
        select-layout main-vertical \; \
        send "launch $f" "Enter"
}}

