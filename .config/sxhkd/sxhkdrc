# Config SXHKD

###############################################################################
#                             MVPs
###############################################################################

super + Return
    $TERMINAL

super + e
    $TERMINAL -e explore

super + b
    $BROWSER

super + r
    rofi -show drun

super + g
    google

super + {_,shift} + w
    setdisplay --bg {toggle-reel,delete}

super + o
    bolt --search

super + p
   mirror --git

super + {l,k}
   crystal --navigate {next,prev}

super + {f,m}
   crystal --toggle {fullscreen,solo}

super + n
   crystal --close

KP_Home
	connect-bt

KP_Delete
    bspc quit
   # pkill -KILL -u $USER
	# pkill -u $USER

################################################################################
#                             BSPWM
################################################################################

# # Navigate Nodes
# super + {_,shift} + {k,l}
# 	bspc node -{f,s} {prev,next}.local
# 	# bspc node -{f,s} {prev,next}.local

super + {_,shift} + {j,semicolon}
	bspc {desktop -f,node -d} {prev,next}

# # Close / Kill
# super + {_,shift} + n
# 	bspc node -{c,k}

# Toggle Tiled / Monocle
super + shift + m
   bspc desktop -l next

# Focus / Swap [ Desktop ]
super + {_,shift} + {1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

{alt,super} + {_,shift} + Tab
	bspc {node,desktop} -f {prev,next}

# Resize Outward
super + alt + {j,l,semicolon,k}
	bspc node -z {left -20 0,bottom 0 20,right 20 0,top 0 -20}

# Resize Inward
super + alt + shift + {j,l,semicolon,k}
	bspc node -z {right -20 0,top 0 20,left 20 0,bottom 0 -20}

# Toggle gaps
super + s
    bspc config window_gap {50, 75,100,0,25}

# Rotate
super + comma
    bspc node @focused:/ -R 270

super + period
    bspc node @focused:/ -R 90

# Shift to Biggest
super + i
    bspc node -n biggest.local

